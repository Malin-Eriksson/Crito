@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;


<div class="services">
    <div class="container">
        <p class="orange">@Model.Value("ourServicesSectionTitle")</p>
        <h2>@Model.Value("ourServicesHeading")</h2>
        <div class="service-info">
               @Html.GetBlockListHtml(Model.OurServices)
        </div>
        <div class="content-center">
            <a href="@Model.Value("ourServicesButtonLink")"><button class="theme-btn">@Model.Value("ourServicesButtonText")&nbsp;<i class="fa-solid fa-arrow-up-right"></i></button></a>
        </div>
    </div>
    <img src="/images/background-lines-right.svg"/>
</div>