@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.TeamMemberPresentation>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;

@{
	Layout = "_Layout.cshtml";
	var image = Model.Value<IPublishedContent>("teamMemberImage");
	
}



<div class="team-member-presentation container">
    <img src="@image.Url()" />
    <h2>@Model.Name</h2>
    <p>@Model.Value("teamMemberRole")</p>
    
    <p>@Model.Value("teamMemberDescription")</p>
</div>