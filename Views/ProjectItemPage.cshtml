@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ProjectItemPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;

@{
	Layout = "_Layout.cshtml";
	var image = Model.Value<IPublishedContent>("projectItemImage");
	
}

@await Html.PartialAsync("_BreadcrumbSection")

<div class="main container">
    <div class="main-article">
        <h2>@Model.Name</h2>
        <div class="article-info">
            <span>@Model.CreateDate.ToString("MMM dd, yyyy")</span>
            <span><i class="fa-solid fa-circle"></i></span>
            <span>@Model.Value("projectItemAuthor")</span>
        </div>
        <img src="@image.Url()" />
        <div>
            <p>@Model.Value("projectItemContent")</p>
		</div>   
    </div>
</div>